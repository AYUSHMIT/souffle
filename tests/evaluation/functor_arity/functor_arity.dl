.decl input_triple(x:number, y:number, z:number)
.input input_triple()

.decl result(result:symbol)
result(result) :-
    input_triple(x,y,z),
    triple = cat("(", to_string(x), ",", to_string(y), ",", to_string(z), ")"),
    max_min = cat("MAX = [", to_string(max(x,y,z)), "], MIN = [", to_string(min(x,y,z)), "]"),
    result = cat(triple, ": ", max_min).

.output result()
