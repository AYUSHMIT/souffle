// Tests the range operator

// Simple range
.decl out1(X:number)
.output out1()
out1(X) :- X = range(1, 10).

// Range with different step
.decl out2(X:number)
.output out2()
out2(X) :- X = range(9, 0, -1).

// Range appearing twice with the same endpoints
.decl out3(X:number, Y:number)
.output out3()
out3(X,Y) :- X = range(1,3), Y = range(1,3).
