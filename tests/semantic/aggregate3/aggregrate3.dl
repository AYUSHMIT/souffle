// Tests RAM aggregrate transformations

.decl a(x:number)
a(1).
.decl b(x:number)
b(y0) :-
   a( y0),
   y0 < count : a(_).
.output b
.decl c(x:number, y:number)
.decl d(x:number, y:number)
.decl e(x:number, y:number)
c(1,1).
d(1,1).
e(1,1).
.decl f(x:number)
f(1).
.output c
c(x,y) :-
      d(x,y),
      e(x,z),
      f(z),
      1 = count : d(x,_).

